{
  "name": "gwen-lsp-vscode",
  "displayName": "Gwen Language Support",
  "description": "Gwen/Wren language support with LSP",
  "version": "0.2.0",
  "publisher": "snowmerak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowmerak/wren.go"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:wren",
    "onLanguage:gwen",
    "onCommand:wren.runFile",
    "onCommand:wren.runCurrentFile",
    "onCommand:gwen.runFile",
    "onCommand:gwen.runCurrentFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wren",
        "aliases": ["Wren", "wren"],
        "extensions": [".wren"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "gwen",
        "aliases": ["Gwen", "gwen"],
        "extensions": [".gwen"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wren",
        "scopeName": "source.wren",
        "path": "./syntaxes/wren.tmLanguage.json"
      },
      {
        "language": "gwen",
        "scopeName": "source.gwen",
        "path": "./syntaxes/wren.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gwen/Wren LSP",
      "properties": {
        "wren.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to gwen-lsp executable"
        },
        "wren.cli.path": {
          "type": "string",
          "default": "",
          "description": "Path to Gwen CLI executable (gwen)"
        },
        "gwen.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to gwen-lsp executable"
        },
        "gwen.cli.path": {
          "type": "string",
          "default": "",
          "description": "Path to Gwen CLI executable (gwen)"
        }
      }
    },
    "commands": [
      {
        "command": "wren.runFile",
        "title": "Wren: Run File",
        "category": "Wren"
      },
      {
        "command": "wren.runCurrentFile",
        "title": "Wren: Run Current File",
        "category": "Wren"
      },
      {
        "command": "gwen.runFile",
        "title": "Gwen: Run File",
        "category": "Gwen"
      },
      {
        "command": "gwen.runCurrentFile",
        "title": "Gwen: Run Current File",
        "category": "Gwen"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == wren",
          "command": "wren.runCurrentFile",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == gwen",
          "command": "gwen.runCurrentFile",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .wren",
          "command": "wren.runFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .gwen",
          "command": "gwen.runFile",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "bundle": "vsce package",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.0"
  }
}
